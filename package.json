  "scripts": {
    "setup:db": "cqlsh -f database/setup.cql",
    "prepare": "node scripts/prepare.js && npm run build",
    "prestart": "npm run prepare",
    "start": "node -r source-map-support/register .",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint --fix 'src/**/*.ts'",
    "test": "mocha",
    "posttest": "npm run lint",
    "build": "npm run build:ts && npm run build:web",
    "build:ts": "echo '[tsc] Building server...' && tsc",
    "build:web": "echo '[webpack] Building web...' && webpack --mode production",
    "watch:ts": "tsc-watch --onSuccess \"node -r source-map-support/register .\"",
    "watch:web": "webpack-dev-server --open --hot"
